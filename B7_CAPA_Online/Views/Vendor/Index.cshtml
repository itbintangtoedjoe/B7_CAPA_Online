                                                <th>Tipe</th>
                                                <th>Superior</th>
                                                @*<th>Created By</th>
                                                    <th>Creation Date</th>
                                                    <th>Updated By</th>*@
                                                <th>Last Updated on</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var vendor in ViewBag.AllVendors)
                                            {
                                                <tr>
                                                    <td hidden> @vendor.ID</td>
                                                    <td><button class="Edit btn btn-primary" >Edit</button><button class="Delete btn btn-danger" >Delete</button></td>
