                            <thead>
                                <tr>
                                    <th>RecordID</th>
                                    <th>No CAPA</th>
                                    <th>Nama Personil</th>
                                    <th>Tindakan Perbaikan</th>
                                    <th>Due Date</th>
                                    <th>Rentang</th>
                                    <th style="width: 120px;">Action</th>
                                </tr>
                            </thead>
                            <tbody id="Table_RentangPerbaikan">
                            </tbody>
                        </table>
                    </div>
                </div>

